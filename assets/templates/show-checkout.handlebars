<h1>Checkout</h1>
<hr>
<div id='messages'>
  Not a message.
</div>
<hr>

<div class="col-sm-3">
  <table class="table">
    <thead>
      <tr>
        <th colspan="3" class="text-center">Order sumary</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Sub total:</td>
        <td id="sub-total"></td>
        <td class="text-right"><b></b></td>
      </tr>
      <tr>
        <td>Shipping:</td>
        <td id="shipping"></td>
        <td class="text-right"></td>
      </tr>
      <tr>
        <td>Tax:</td>
        <td id="tax"></td>
        <td class="text-right"></td>
      </tr>
      <tr>
        <td>Total:</td>
        <td id="total"></td>
        <td class="text-right"></td>
      </tr>
    </tbody>
  </table>

  <form id="payment-form">
    <span class="payment-errors"></span>

    <div class="form-row">
      <label>
      <span>Card Number</span>
      <input type="text" size="20" value="4242424242424242" data-stripe="number">
    </label>
    </div>

    <div class="form-row">
      <label>
      <span>Expiration (MM/YY)</span>
      <input type="text" value="10" size="2" data-stripe="exp_month">
    </label>
      <span> / </span>
      <input type="text" value="17" size="2" data-stripe="exp_year">
    </div>

    <div class="form-row">
      <label>
      <span>CVC</span>
      <input type="text" value="622" size="4" data-stripe="cvc">
    </label>
    </div>


    <input type="submit" class="submit-payment" value="Submit Payment">
  </form>

  <a id="proceed-button" class="btn btn-right">Proceed</a>
</div>
</div>
