
<div class="container-fluid productlist">
  <h1>Products</h1>
  <hr>
  <div id='messages'>
    Not a message.
  </div>
  <hr>
  {{#each this}}
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 product-image" data-productid="{{_id}}">
    <a>
      <img class="img-responsive" src="{{image_url}}">
        <span class="productlist-price-container">
          <span class="product-price product-title">
            <span>{{title}}</span>
          </span>
        </span>

        <span class="productlist-price-container price-container">
          <span class="product-price">
            <span class="price">{{price}}</span>
          </span>
        </span>
    </a>
    </div>
  {{/each}}
</div>
